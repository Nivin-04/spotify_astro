---
import Main from '../components/Main.astro';
import Artist from '../components/Artist.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<Main />
	<body>
	<div class="music">
		<Artist image="https://via.assets.so/album.png?id=1&q=95&w=360&h=360&fit=fill" artist="Miley Cyrus" type="kunster"/>
		<Artist image="https://via.assets.so/album.png?id=1&q=95&w=360&h=360&fit=fill" artist="Miley Cyrus" type="kunster"/>
